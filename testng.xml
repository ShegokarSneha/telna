<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SuiteWithRetry" verbose="1">
    <listeners>
        <!-- Register the transformer listener to apply retry logic globally -->
        <listener class-name="com.telna.util.RetryTransformer" />
        <listener class-name="com.telna.reporting.ExtentReportListener"></listener>
    </listeners>

    <test name="Tests">
        <classes>
            <class name="com.telna.tests.ApplicationTests" />
            <class name="com.telna.tests.RestApiTests" />
        </classes>
    </test>
</suite>
